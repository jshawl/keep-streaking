<!DOCTYPE html>
<html>
<head>
  <title>Keepstreaking</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <h1 id="logo">Keep Streaking</h1>

  <% if current_user %>
    <%= link_to "Logout "+ current_user.name, '/signout'  %>
  <% else %>
    <%= link_to "Sign in with Github", "/auth/github" %>
  <% end %>

<%= yield %>

</body>
</html>
